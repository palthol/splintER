{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": false, // Set to false for now to ease migration
      "esModuleInterop": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": false,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
    },
    "include": [
      "**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }